<Window x:Class="RecipeOrganizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeOrganizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF282828">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <Label x:Name="title" Grid.Row="1" Grid.Column="2" Foreground="White" FontSize="20" Background="#FF282828" Margin="20,3,20,0" VerticalAlignment="Center">Recipe Organizer</Label>
        <ListBox x:Name="recipeListItems" Grid.Row="2" Grid.Column="1" Background="#FF373737" Foreground="White" BorderBrush="#FF1E1E1E" Margin="20,20,20,20" />
        <ListBox x:Name="recipeIngredients" Grid.Row="2" Grid.Column="3" Background="#FF373737" Margin="20,20,20,20" BorderBrush="#FF373737" />
        <Button x:Name="recipeCreationButton" Grid.Row="2" Grid.Column="2" Content="Create New Recipe" Background="#FFB7B7BA" Margin="20,160,20,160"/>

    </Grid>
</Window>
